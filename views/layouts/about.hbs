    <script>
        M.Sidenav.init(document.querySelector('.sidenav'))
        document.querySelectorAll('.tooltipped').forEach(function(elems, options) {
            M.Tooltip.init(elems);
        }) 
        document.querySelectorAll('.materialboxed').forEach(function(elems, options) {
            M.Materialbox.init(elems);
        })
        document.querySelectorAll('.parallax').forEach(function(elems, options) {
            M.Parallax.init(elems);
        })
        document.querySelectorAll('.tabs').forEach(function(elems, options) {
            M.Tabs.init(elems);
        })
        document.querySelectorAll('.datepicker').forEach(function(elems, options) {
            M.Datepicker.init(elems, {
                disableWeekends: true
            });
        })
